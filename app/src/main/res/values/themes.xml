<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MetaU_Capstone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- <style name="Theme.MetaU_Capstone" parent="Theme.Design.NoActionBar"> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Normal formatting. -->
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
        <!-- Action bar formatting -->
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
    </style>


    <style name="Splashscreen" parent="Theme.MetaU_Capstone" >
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


    <!-- Light mode theme -->
    <style name="Theme.LightMode" parent="Theme.MetaU_Capstone">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorTertiary">@color/light_grey</item>
        <item name="textFillColor">@color/black</item>    <!-- Primary Text color -->
        <item name="textColorSearchUrl">@color/white</item> <!-- Secondary Text color -->
        <item name="textOutlineColor">@color/light_grey</item> <!-- Tertiary Text color -->
        <item name="background">@color/white</item>      <!-- Primary background color -->
        <item name="backgroundColor">@color/black</item> <!-- Secondary background color -->

        <item name="colorError">@color/darker_red</item> <!-- Red color -->
    </style>

    <!-- Light mode theme -->
    <style name="Theme.DarkMode" parent="Theme.MetaU_Capstone">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorTertiary">@color/light_grey</item>
        <item name="textFillColor">@color/white</item>    <!-- Primary Text color -->
        <item name="textColorSearchUrl">@color/black</item> <!-- Secondary Text color -->
        <item name="textOutlineColor">@color/light_grey</item> <!-- Tertiary Text color -->
        <item name="background">@color/black</item>      <!-- Primary background color -->
        <item name="backgroundColor">@color/white</item> <!-- Secondary background color -->

        <item name="colorError">@color/darker_red</item> <!-- Red color -->
    </style>
</resources>