<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="Fragments.FriendsFragment">

    <SearchView
        android:id="@+id/svFriends"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:closeIcon="@drawable/close"
        android:goIcon="@drawable/go_icon"
        android:inputType="text"
        android:queryHint="Search friends by username"
        android:saveEnabled="true"
        android:searchIcon="@drawable/search"
        android:voiceIcon="@drawable/voice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFriends"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/svFriends"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvNoFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="No friends :(\nAdd some with the search bar above!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/rvFriends"
        app:layout_constraintEnd_toEndOf="@+id/rvFriends"
        app:layout_constraintStart_toStartOf="@+id/rvFriends"
        app:layout_constraintTop_toTopOf="@+id/rvFriends" />

</androidx.constraintlayout.widget.ConstraintLayout>